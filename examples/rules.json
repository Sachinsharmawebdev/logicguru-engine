[
  {
    "id": "section-rule",
    "useFiles": {
      "productFile": {
        "path": "$product.json",
        "variable": ["eventsect", "evectus"]
      }
    },
    "condition": {
      "and": [
        { "==": ["$source", "evectus"] },
        { "==": ["$productId", "123344"] },
        { "==": ["$employeeId", "28325"] }
      ]
    },
    "actions": [
      {
        "type": "assign",
        "key": "reactivate",
        "value": "$productFile"
      },
      {
        "type": "assign",
        "key": "newChangeto",
        "value": "$productFile"
      }
    ]
  }
]